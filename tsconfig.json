{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2020",
      "ESNext.Array",
      "DOM"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "outDir": "lib",
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "lib",
    "skipLibCheck": true,
    "declaration": true,
    "target": "ES2020",
    "strict": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./lib/**/*.ts",
    "./lib/**/*.js"
  ]
}